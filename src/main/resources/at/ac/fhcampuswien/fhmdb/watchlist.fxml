<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.util.Callback?>
<VBox fx:id="watchlistVBox" xmlns:fx="http://javafx.com/fxml" fx:controller="at.ac.fhcampuswien.fhmdb.ui.WatchListController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Your Watchlist">
        <font>
            <Font size="24"/>
        </font>
    </Label>
    <ListView fx:id="watchlistListView" VBox.vgrow="ALWAYS">
        <cellFactory>
            <Callback>
                <!-- Replace with your MovieCell class path if it includes specific handling -->
                <fx:include source="home-view.fxml"/>
            </Callback>
        </cellFactory>
    </ListView>
    <HBox spacing="10">
        <Button text="Switch to Home" onAction="#switchToHome"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Remove All" onAction="#removeAllFromWatchlist"/>
    </HBox>
</VBox>
